{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",

  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(png|jpg|jpeg|svg|webp|avif)",
          "/*.(woff2|woff|ttf)"
        ]
      }
    }
  ],

  "dataGroups": [
    {
      "name": "api-home-fast",
      "urls": [
        "http://localhost:3000/configuration/**",
        "http://localhost:3000/promociones/**",
        "https://alebrije.onrender.com/configuration/**",
        "https://alebrije.onrender.com/promociones/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 50,
        "maxAge": "6h",
        "timeout": "2s"
      }
    },
    {
      "name": "api-critical-pages",
      "urls": [
        "http://localhost:3000/menu-catalogo/productos*",
        "http://localhost:3000/menu-catalogo/productos/producto-detalle/*",
        "http://localhost:3000/terminos-condiciones",
        "http://localhost:3000/aviso-privacidad",
        "http://localhost:3000/deslinde-legal",
        "http://localhost:3000/contacto",

        "https://alebrije.onrender.com/menu-catalogo/productos*",
        "https://alebrije.onrender.com/menu-catalogo/productos/producto-detalle/*",
        "https://alebrije.onrender.com/terminos-condiciones",
        "https://alebrije.onrender.com/aviso-privacidad",
        "https://alebrije.onrender.com/deslinde-legal",
        "https://alebrije.onrender.com/contacto"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 100,
        "maxAge": "7d",
        "timeout": "2s"
      }
    },
    {
      "name": "api-default",
      "urls": [
        "http://localhost:3000/**",
        "https://alebrije.onrender.com/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxAge": "1d",
        "timeout": "3s"
      }
    },
    {
      "name": "api-recommender",
      "urls": [
        "https://proyectom3.onrender.com/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 30,
        "maxAge": "12h",
        "timeout": "3s"
      }
    }
  ],

  "navigationUrls": [
    "/**",
    "!/**/*.*",
    "!/auth/**",
    "!/api/**",
    "!/assets/**"
  ]
}
